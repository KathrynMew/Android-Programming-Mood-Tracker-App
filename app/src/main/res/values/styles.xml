<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="sectionHeader">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/theme_header</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#D2D8CD</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="subSectionHeader">
        <item name="android:layout_width">350dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#A1E391</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#0F3E05</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="hintNote">
        <item name="android:layout_width">310dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#A1E391</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#0F3E05</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="screenTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#076E00</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#FFF491</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="nextActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/theme_pink</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:textColor">#031760</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="actionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/theme_neon_green</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:textColor">#0F3E05</item>
        <item name="android:textSize">25sp</item>
    </style>
</resources>